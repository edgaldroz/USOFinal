<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleDelPaso"
    android:background="#fff"
    android:gravity="fill_vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_weight="100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:layout_gravity="fill_vertical"
        android:weightSum="100">

        <!-- Encabezados -->
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="top"
            android:gravity="top"
            >
            <TextView
                android:id="@+id/tvNumeroPaso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paso número uno"
                android:textColor="#324154"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="-3dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>


        <!-- Contenido Respuestas -->
        <LinearLayout
            android:layout_weight="80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Que -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/item_terciario"
                android:padding="15dp"
                android:layout_marginBottom="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Qué se hizo?"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#008080"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:id="@+id/lblPageQue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:textColor="#383838" />
            </LinearLayout>

            <!-- Por Que -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/item_secundario"
                android:padding="15dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Por qué?"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:textColor="#00523e"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:id="@+id/lblPagePorque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's"
                    android:gravity="start"
                    android:textSize="14dp"
                    android:textColor="#00523e" />
            </LinearLayout>

            <!-- procedimiento -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:orientation="vertical"
                android:background="@drawable/item_terciario"
                android:padding="15dp"
                android:layout_marginBottom="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proceso"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:textColor="#008080"
                    android:textStyle="bold"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:id="@+id/lblPageProceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's"
                    android:gravity="fill_horizontal"
                    android:textSize="14dp"
                    android:textColor="#383838" />
            </LinearLayout>

        </LinearLayout>

        <!-- Separador -->


        <LinearLayout
            android:layout_weight="15"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="100">

            <!-- Boton Anterior -->
            <LinearLayout
                android:id="@+id/btnPasoAnterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blanco_cverde"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_weight="40"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imgAnterior"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_weight="30" />
                <TextView
                    android:id="@+id/lblPasoAnterior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Anterior"
                    android:textSize="16dp"
                    android:textColor="#008080"
                    android:textStyle="bold"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_weight="70"
                    />

            </LinearLayout>

            <ImageView
                android:layout_weight="20"
                android:id="@+id/btnHome"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_home_black_24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <!-- Boton Siguiente -->
            <LinearLayout
                android:layout_weight="40"
                android:id="@+id/btnPasoSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blanco_cverde"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:weightSum="100">
                <TextView
                    android:layout_weight="70"
                    android:id="@+id/lblPasoSiguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Siguiente"
                    android:textSize="16dp"
                    android:textColor="#008080"
                    android:textStyle="bold"
                    android:gravity="right|center_vertical" />
                <ImageView
                    android:layout_weight="30"
                    android:id="@+id/imgSiguiente"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_rigth"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>